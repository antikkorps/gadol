---
// src/components/Hero.astro
import Icon from './Icon.astro';
---

<section class="relative min-h-screen flex items-center justify-center pt-20 overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
  <!-- Enhanced Background Animation -->
  <div class="absolute inset-0 opacity-30">
    <!-- Animated gradient meshes -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-blue-500/20 to-cyan-500/20 rounded-full filter blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 w-80 h-80 bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-full filter blur-3xl animate-pulse animation-delay-2s"></div>
    <div class="absolute bottom-0 left-1/3 w-72 h-72 bg-gradient-to-br from-pink-500/20 to-orange-500/20 rounded-full filter blur-3xl animate-pulse animation-delay-4s"></div>
    
    <!-- Floating geometric shapes -->
    <svg class="w-full h-full" viewBox="0 0 1000 1000" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id="heroGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:0.4" />
          <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0.4" />
        </linearGradient>
        <linearGradient id="heroGrad2" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#EC4899;stop-opacity:0.3" />
          <stop offset="100%" style="stop-color:#F59E0B;stop-opacity:0.3" />
        </linearGradient>
      </defs>
      
      <!-- AI-themed geometric elements -->
      <g class="floating-elements">
        <!-- Neural network nodes -->
        <circle cx="150" cy="150" r="3" fill="url(#heroGrad1)">
          <animateTransform attributeName="transform" type="translate" values="0,0; 30,20; 0,0" dur="8s" repeatCount="indefinite"/>
          <animate attributeName="opacity" values="0.3;0.8;0.3" dur="4s" repeatCount="indefinite"/>
        </circle>
        <circle cx="250" cy="300" r="2" fill="url(#heroGrad2)">
          <animateTransform attributeName="transform" type="translate" values="0,0; -25,35; 0,0" dur="6s" repeatCount="indefinite"/>
          <animate attributeName="opacity" values="0.4;0.9;0.4" dur="3s" repeatCount="indefinite"/>
        </circle>
        <circle cx="750" cy="200" r="4" fill="url(#heroGrad1)">
          <animateTransform attributeName="transform" type="translate" values="0,0; 40,-15; 0,0" dur="7s" repeatCount="indefinite"/>
          <animate attributeName="opacity" values="0.2;0.7;0.2" dur="5s" repeatCount="indefinite"/>
        </circle>
        
        <!-- Connection lines -->
        <path d="M150,150 Q300,200 250,300" stroke="url(#heroGrad1)" stroke-width="1" fill="none" opacity="0.4">
          <animate attributeName="stroke-dasharray" values="0,200; 100,100; 0,200" dur="12s" repeatCount="indefinite"/>
        </path>
        <path d="M250,300 Q500,250 750,200" stroke="url(#heroGrad2)" stroke-width="1" fill="none" opacity="0.3">
          <animate attributeName="stroke-dasharray" values="0,300; 150,150; 0,300" dur="10s" repeatCount="indefinite"/>
        </path>
        
        <!-- Abstract brain/AI patterns -->
        <path d="M400,100 Q600,150 500,250 Q300,200 400,100" stroke="url(#heroGrad1)" stroke-width="2" fill="none" opacity="0.2">
          <animate attributeName="stroke-dasharray" values="0,500; 250,250; 0,500" dur="15s" repeatCount="indefinite"/>
        </path>
      </g>
    </svg>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-6 text-center relative z-10">
    <div class="max-w-5xl mx-auto pb-20">
      
      <!-- Badge/Subtitle -->
      <div class="hero-badge inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-8">
        <span class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></span>
        <span class="text-sm font-medium text-gray-300">Formation IA révolutionnaire</span>
      </div>
      
      <!-- Main Headline -->
      <h1 class="hero-title text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
        Apprenez l'IA avec
        <span class="block bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">
          Victor Hugo & Marie Curie
        </span>
      </h1>
      
      <!-- Subtitle with better hierarchy -->
      <p class="hero-subtitle text-lg md:text-xl lg:text-2xl text-gray-300 mb-8 max-w-4xl mx-auto leading-relaxed">
        Maîtrisez l'Intelligence Artificielle avec des <strong class="text-white">personnages historiques animés par IA</strong>. 
        Une formation pratique adaptée à votre secteur professionnel.
      </p>
      
      <!-- Value propositions -->
      <div class="hero-features grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 max-w-3xl mx-auto">
        <div class="flex items-center justify-center md:justify-start space-x-2">
          <div class="w-8 h-8 bg-blue-500/20 rounded-lg flex items-center justify-center">
            <Icon name="theater" class="w-4 h-4 text-blue-400" />
          </div>
          <span class="text-gray-300 text-sm">Formateurs légendaires</span>
        </div>
        <div class="flex items-center justify-center md:justify-start space-x-2">
          <div class="w-8 h-8 bg-purple-500/20 rounded-lg flex items-center justify-center">
            <Icon name="target" class="w-4 h-4 text-purple-400" />
          </div>
          <span class="text-gray-300 text-sm">Contexte professionnel</span>
        </div>
        <div class="flex items-center justify-center md:justify-start space-x-2">
          <div class="w-8 h-8 bg-green-500/20 rounded-lg flex items-center justify-center">
            <Icon name="lightning" class="w-4 h-4 text-green-400" />
          </div>
          <span class="text-gray-300 text-sm">Résultats en 7 jours</span>
        </div>
      </div>
      
      <!-- Enhanced CTA Form -->
      <div class="hero-cta max-w-lg mx-auto">
        <div class="space-y-4">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1 relative">
              <input 
                type="email" 
                placeholder="Votre email" 
                class="w-full px-6 py-4 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/20 outline-none transition-all duration-300 text-white placeholder-gray-400 text-lg"
                required
              />
            </div>
            <a 
              href="/prochainement"
              class="px-8 py-4 bg-gradient-to-r from-blue-500 via-purple-600 to-pink-600 hover:from-blue-600 hover:via-purple-700 hover:to-pink-700 rounded-2xl font-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-2xl whitespace-nowrap group inline-flex items-center justify-center"
            >
              <span class="mr-2">Commencer ma formation</span>
              <span class="inline-block transform group-hover:translate-x-1 transition-transform">→</span>
            </a>
          </div>
          
          <!-- Trust indicators -->
          <div class="flex items-center justify-center space-x-6 text-xs text-gray-400 pt-4">
            <div class="flex items-center space-x-1">
              <Icon name="circle" class="w-3 h-3 text-green-500" />
              <span>Accès immédiat</span>
            </div>
            <div class="flex items-center space-x-1">
              <Icon name="lock" class="w-3 h-3 text-gray-400" />
              <span>Sans engagement</span>
            </div>
            <div class="flex items-center space-x-1">
              <Icon name="star" class="w-3 h-3 text-yellow-500" />
              <span>5000+ professionnels</span>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  .animation-delay-2s {
    animation-delay: 2s;
  }
  .animation-delay-4s {
    animation-delay: 4s;
  }
  
  /* Custom animations for floating elements */
  .floating-elements {
    animation: float 20s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(1deg); }
    50% { transform: translateY(0px) rotate(0deg); }
    75% { transform: translateY(-5px) rotate(-1deg); }
  }
  
  /* Improved responsive text */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
      line-height: 1.1;
    }
    .hero-subtitle {
      font-size: 1.125rem;
    }
  }
</style>